"
    , "seg.bra"
    , NEW
    , BIN
    )
& lst'(X,"seg.bra",APP)
& put'(\n,"seg.bra",APP,BIN)
& lst'(r,"seg.bra",APP)
& put$(str$("\nnew'" X ";\n"),"seg.bra",APP,BIN)
& ;

